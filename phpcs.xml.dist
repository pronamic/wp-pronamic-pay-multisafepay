<?xml version="1.0"?>

<ruleset name="WordPress Pay MultiSafepay rules">
	<rule ref="WordPress">
		<exclude name="Generic.Files.LowercasedFilename.NotFound" />

		<exclude name="Squiz.Commenting" />

		<exclude name="WordPress.VIP.RestrictedFunctions.wp_remote_get" />		
	</rule>

	<rule ref="WordPress.VIP.SlowDBQuery.slow_db_query">
		<exclude-pattern>src/Settings.php</exclude-pattern>
	</rule>

	<rule ref="WordPress.VIP.RestrictedFunctions.file_get_contents">
		<exclude-pattern>tests/**/*</exclude-pattern>
	</rule>

	<rule ref="Squiz.PHP.CommentedOutCode.Found">
		<exclude-pattern>tests/**/*</exclude-pattern>
	</rule>

	<rule ref="WordPress.NamingConventions.ValidVariableName">
		<properties>
			<property name="customVariablesWhitelist" type="array" value="documentElement,preserveWhiteSpace,formatOutput" />
		</properties>
	</rule>
</ruleset>
